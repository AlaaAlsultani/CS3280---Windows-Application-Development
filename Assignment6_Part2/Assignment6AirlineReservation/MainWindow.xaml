                <ComboBox x:Name="cbChoosePassenger" Grid.Column="1" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="120" Grid.Row="1" IsEnabled="False" SelectionChanged="cbChoosePassenger_SelectionChanged"/>
